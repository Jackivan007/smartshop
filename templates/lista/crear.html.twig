{% block title %}Crear lista
{% endblock %}

{% block body %}
	<div class="form-container">
		<h1 class="form-title">Crear lista</h1>

		{{ form_start(listaForm) }}
		<div class="form-group">
			{{ form_row(listaForm.nombre) }}
